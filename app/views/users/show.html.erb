<% provide(:title, '用户信息') %>
<div class="panel panel-primary">

  <%= form_for @user , html:{class:"form-horizontal"} do |f| %>
      <!--如果局部视图有要在多个控制器中使用, 最好放在shared文件夹下(rails的约定)-->
      <%= render 'shared/error_messages', object: f.object %>
      <fieldset>
        <legend>用户信息</legend>
        <div class="form-group">
          <label class="col-lg-2 control-label">用户名</label>
          <div class="col-lg-8">
            <%= f.text_field :name, class:"form-control",disabled:"" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label">Email</label>
          <div class="col-lg-8">
            <%= f.text_field :email, class:"form-control",disabled:"" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label">手机</label>
          <div class="col-lg-8">
            <%= f.text_field :mobile, class:"form-control",disabled:"" %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label"></label>
          <div class="col-lg-8">
            <div class="checkbox">
              <label>
                <%= f.check_box :send_msg,disabled:"" %> 是否发送预警信息
              </label>
            </div>
          </div>
        </div>

      </fieldset>
  <% end %>

</div>