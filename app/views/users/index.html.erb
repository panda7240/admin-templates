<% provide(:title, '用户管理') %>
<legend>用户管理</legend>
<%= will_paginate %>
<table class="table table-striped table-hover ">
  <thead>
  <tr class="danger">
    <th>ID</th>
    <th>用户名</th>
    <th>邮箱</th>
    <th>手机</th>
    <th>是否发送消息</th>
    <th>所属组</th>
    <th>创建时间</th>
    <th>操作</th>
  </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.mobile %></td>
        <td><%= user.send_msg %></td>
        <td>
          <% user.groups.each do |gr| %>
              <%= gr.name %>
          <% end %>
        </td>
        <td><%= user.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("custom.messages.edit")),
                      edit_user_path(user), :class => 'btn btn-primary' %>
          <%= link_to t('.destroy', :default => t("custom.messages.delete")),
                      user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("custom.messages.confirm")) },
                      :class => 'btn btn-warning' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate %>